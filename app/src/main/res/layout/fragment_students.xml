<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragments.StudentsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ActionBarStyle">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/monserratalternates_bold"
                android:text="Alumnos"
                android:textColor="@color/light_blue_primary_dark"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/btn_salir"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:backgroundTint="@color/light_blue_primary_dark"
                android:fontFamily="@font/monserratalternates_bold"
                android:padding="20dp"
                android:text="Salir"
                android:textAllCaps="false"
                android:textColor="@color/white" />



        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linearlayout_nodata"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:background="@drawable/warning_person"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:textAlignment="center"
            android:fontFamily="@font/monserratalternates_bold"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:text="Los alumnos aun no registran avances."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:listitem="@layout/item_user_operations_shimmer" />



</LinearLayout>